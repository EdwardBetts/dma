+						}
+						/* FALLTHROUGH */
+					default:
+						buf[pos++] = *p;
+						break;
+				}
+				break;
+
+			case DHT_END:
+				switch (*p) {
+					case '\0':
+						yet = 0;
+						break;
+
+					case ' ':
+					case '\t':
+						break;
+
+					case ',':
+					case ';':
+						pos = 0;
+						st = DHT_START;
+						break;
+
+					default:
+						warnx("Garbage after address");
+						return (-1);
+				}
+				break;
+
+			default:
+				errx(1, "Internal error: parse_header_line(): unexpected state %d", st);
+		}
+	}
+	return (0);
+}
