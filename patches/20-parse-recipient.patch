+						/* FALLTHROUGH */
+					case '>':
+						buf[pos] = '\0';
+						while (pos > 0 &&
+						    (buf[pos - 1] == ' ' ||
+						     buf[pos - 1] == '\t'))
+							buf[--pos] = '\0';
+						if (pos == 0)
