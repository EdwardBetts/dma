+			case DHT_QUOTE_NAME_OR_ADDR:
+				switch (*p) {
+					case '\0':
+						warnx("Unterminated quoted string in address");
+						return (-1);
+						break;
+
+					case '"':
+						st = DHT_NAME_OR_ADDR;
+						break;
+
+					case '\\':
+						p++;
+						if (*p == '\0') {
